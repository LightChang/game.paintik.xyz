---
import Layout from '../layouts/Layout.astro';
import "tailwindcss/tailwind.css";
import "../styles/global.css";
export const metadata = {
  title: "Chillangel play to earn",
  description: "Chillangel play to earn",
  keywords: "Chillangel play to earn",
  url: "https://game.paintik.xyz/",
  image: "https://i.imgur.com/dgBXMcB.png",
  datePublished: new Date().toISOString().split("T")[0],
};
import { website } from "../utils/update";
const venueData = await website();
---
<Layout metadata={metadata}>
  <div class="container mx-auto">
    <h1 class="text-4xl font-bold text-center">Chillangel play to earn</h1>
    <form 
      action={`${process.env.HOST}api/venue/register`}
      method="post" 
      class="space-y-4"
    >
      <sl-input name="nameTw" label="中文姓名"></sl-input>
      <sl-input name="nameEn" label="英文姓名"></sl-input>
      <sl-input name="phone" label="手機號碼"></sl-input>
      <sl-input name="tg" label="TG帳號"></sl-input>
      <sl-input name="line" label="LINE帳號"></sl-input>
      <sl-input name="email" label="信箱"></sl-input>
      <sl-input name="wallet" label="綁定錢包地址"></sl-input>
      <input type="hidden" name="venue" value={venueData.documentId} />
      <sl-button type="submit" pill>註冊</sl-button>
    </form>
  </div>
</Layout>